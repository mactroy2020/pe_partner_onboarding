{
    "name": "partner_onboarding",
    "version": "1.0.0",
    "description": "Create a sample partner onboarding configuration",
    "main": "index.js",
    "scripts": {
        "build-ca-img": "docker build -t partner-ca:latest .",
        "test": "echo \"Error: no test specified\" && exit 1",
        "init-ca": "/bin/sh ./src/generate-ca.sh",
        "start-ca": "docker run -d -v $(pwd)/config/ca_config_vars:/ca/vars -v $(pwd)/config/pki:/ca/pki --name my-ca partner-ca:latest tail -f /dev/null",
        "build-ca": "docker exec -it my-ca /bin/bash -c \"echo \"oasis.mactroy.com\" | /ca/easyrsa build-ca nopass\"",
        "remove-ca": "docker container rm -f my-ca 2> /dev/null || true",
        "stop-ca": "docker rm -f my-ca",
        "console-ca": "docker exec -it my-ca /bin/bash",
        "clean": "npm run remove-ca && rm -rf config/pki"
    },
    "author": "Troy Cochran",
    "license": "private"
}
